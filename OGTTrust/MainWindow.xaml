<Window x:Class="OGTTrust.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="OGTTrust" Height="520" Width="860" Background="#1E1E1E"
        xmlns:local="clr-namespace:OGTTrust">
    <Window.Resources>
        <local:BoolToStartStopConverter x:Key="StartStopConv" />
    </Window.Resources>
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <StackPanel Orientation="Vertical">
                <TextBlock Text="OGTTrust" FontSize="28" FontWeight="Bold" Foreground="#FFFFFF">
                    <TextBlock.RenderTransform>
                        <ScaleTransform ScaleX="1" ScaleY="1" />
                    </TextBlock.RenderTransform>
                </TextBlock>
                <TextBlock Text="USB device protection" Foreground="#AAAAAA" Margin="0,4,0,0" />
            </StackPanel>
            <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
                <Button x:Name="btnStartStop" Width="100" Height="34" Margin="0,0,8,0" Background="#007ACC" Foreground="#FFFFFF"
                        Content="{Binding IsRunning, Converter={StaticResource StartStopConv}}"
                        Command="{Binding StartStopCommand}">
                </Button>
                <Button x:Name="btnExit" Width="90" Height="34" Background="#D13913" Foreground="#FFFFFF" Click="btnExit_Click">Exit</Button>
            </StackPanel>
        </Grid>

        <Border Grid.Row="2" Background="#1E1E1E" CornerRadius="6" Padding="12" BorderBrush="#333333" BorderThickness="1">
            <ScrollViewer Background="#1E1E1E">
                <TextBlock x:Name="txtLog" FontFamily="Consolas" FontSize="12" Foreground="#D4D4D4" TextWrapping="Wrap" 
                          Text="Application started successfully. Ready to monitor USB devices..." />
            </ScrollViewer>
        </Border>

        <Grid Grid.Row="3" Margin="0,10,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <StackPanel Orientation="Vertical" Grid.Column="0">
                <TextBlock Text="Metrics" Foreground="#FFFFFF" FontWeight="SemiBold" />
                <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                    <TextBlock Text="Total: " Foreground="#FFFFFF" />
                    <TextBlock Text="0" x:Name="lblTotal" Foreground="#FFFFFF" FontWeight="Bold" />
                    <TextBlock Text="   Suspicious: " Foreground="#FFFFFF" Margin="8,0,0,0" />
                    <TextBlock Text="0" x:Name="lblSuspicious" Foreground="#FF6B6B" FontWeight="Bold" />
                </StackPanel>
            </StackPanel>

            <StackPanel Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Right">
                <!-- placeholder for future controls -->
            </StackPanel>
        </Grid>
    </Grid>
</Window>
